# AI API Keys
GEMINI_API_KEY=
# Multiple Gemini API keys for rate limit handling (blog's approach)
# Set multiple keys separated by commas to enable automatic rotation
# GEMINI_API_KEYS=key1,key2,key3
OPENAI_API_KEY=

# Ollama LLM Settings (Local, FREE - RECOMMENDED)
USE_OLLAMA=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b-instruct-q4_K_M
OLLAMA_TIMEOUT=300

# Image Generation Settings
OPENAI_IMAGE_MODEL=dall-e-3       # Model for background images: dall-e-3 (default) or dall-e-2
THUMBNAIL_IMAGE_MODEL=            # Model for thumbnail images (optional, defaults to OPENAI_IMAGE_MODEL if not set)

# ComfyUI (Local, FREE - Recommended for image generation)
USE_COMFYUI=true
COMFYUI_URL=http://127.0.0.1:8188
COMFYUI_UNET=qwen_image_2512_fp8_e4m3fn.safetensors
COMFYUI_CLIP=qwen_2.5_vl_7b_fp8_scaled.safetensors
COMFYUI_VAE=qwen_image_vae.safetensors
COMFYUI_CLIP_TYPE=qwen_image

# Stable Diffusion WebUI (Local, FREE - Alternative to ComfyUI)
USE_STABLE_DIFFUSION=false
SD_WEBUI_URL=http://stable-diffusion:7860
SD_MODEL_CHECKPOINT=              # Optional: Specific model hash or name

# Gemini TTS Settings (December 2025 - latest models)
GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts    # gemini-2.5-flash-preview-tts (faster, cost-efficient) or gemini-2.5-pro-preview-tts (higher quality)
GEMINI_TTS_MALE_VOICE=Zephyr                     # Male voice name for dialogue (supported: Zephyr, Puck, Charon, Fenrir, Orus, etc.)
GEMINI_TTS_FEMALE_VOICE=Aoede                    # Female voice name for dialogue (supported: Aoede, Leda, Despina, Callirrhoe, etc.)

# VOICEVOX Settings (Local, FREE - Recommended for Japanese TTS)
USE_VOICEVOX=true
VOICEVOX_URL=http://voicevox:50021
VOICEVOX_MALE_ID=13              # 青山龍星 (ノーマル) - Male voice
VOICEVOX_FEMALE_ID=3             # ずんだもん (ノーマル) - Female voice

# Voice parameters
VOICEVOX_SPEED_SCALE=1.15        # Speech speed (1.0 = normal, 1.15 = slightly faster)
VOICEVOX_PITCH_SCALE=0.0         # Pitch adjustment (-0.15 to 0.15)
VOICEVOX_INTONATION_SCALE=1.0    # Intonation intensity (0.0 to 2.0)
VOICEVOX_VOLUME_SCALE=1.0        # Volume (0.0 to 2.0)

# Caching and performance
VOICEVOX_CACHE_ENABLED=true
VOICEVOX_CACHE_DIR=/tmp/voicevox_cache
VOICEVOX_MAX_RETRIES=3
VOICEVOX_RETRY_DELAY=2.0

# Chunking settings (for 30-minute episodes)
VOICEVOX_MAX_CHUNK_CHARS=80      # Maximum characters per TTS chunk
VOICEVOX_MIN_CHUNK_CHARS=20      # Minimum characters per chunk
VOICEVOX_CONCURRENT_LIMIT=1      # Keep at 1 for Mac M4 stability

# Audio mastering settings
AUDIO_CROSSFADE_MS=200           # Crossfade between chunks (200-400ms recommended)
AUDIO_SILENCE_THRESHOLD_DB=-40   # Silence detection threshold
AUDIO_TARGET_LUFS=-16            # Target loudness (podcast standard)
AUDIO_OUTPUT_BITRATE=192k        # MP3 output bitrate

# Coqui TTS (deprecated - use VOICEVOX instead)
# COQUI_MALE_SPEAKER_WAV=assets/voices/male.wav
# COQUI_FEMALE_SPEAKER_WAV=assets/voices/female.wav

# Nano Banana Pro (image generation via Gemini CLI)
# Note: The 'nanobanana' binary does not exist. This option requires the 'gemini' CLI
# with nanobanana extension installed. If unavailable, falls back to OpenAI DALL-E.
# Recommendation: Set to false to use OpenAI DALL-E directly (more reliable in Docker)
USE_NANO_BANANA_PRO=false
NANO_BANANA_PRO_STYLE=cinematic-newsroom
NANO_BANANA_PRO_WIDTH=1792
NANO_BANANA_PRO_HEIGHT=1024
NANO_BANANA_PRO_TIMEOUT=120

# ElevenLabs for accurate subtitle timing (optional)
ELEVENLABS_API_KEY=

# Video generation settings
VIDEOS_PER_DAY=1
DURATION_MINUTES=10
TOPIC_CATEGORY=economics
VIDEO_TOPIC=

# Video quality settings
USE_WHISPER_STT=true           # Use Whisper for accurate subtitle timing (100% FREE, local, recommended)
WHISPER_MODEL_SIZE=base        # Whisper model size: tiny, base, small, medium, large (base recommended)
USE_ELEVENLABS_STT=false       # Use ElevenLabs for accurate subtitle timing (paid API, requires ELEVENLABS_API_KEY)

# Web search (optional - for trending topics)
USE_WEB_SEARCH=false
SERPER_API_KEY=

# RSS Feed Settings (Phase 4 - Cost saving)
USE_RSS_FEED=true

# Notifications (optional - Slack)
SLACK_WEBHOOK_URL=

# Tracking (optional - Google Sheets output)
SHEETS_WEBHOOK_URL=
GOOGLE_SHEETS_API_KEY=
SPREADSHEET_ID=

# Spreadsheet Input (optional - read scenarios from Google Sheets)
# When enabled, reads video data from spreadsheet instead of generating with AI
SHEETS_INPUT_ENABLED=false
SHEETS_SPREADSHEET_ID=                       # Spreadsheet ID from URL (e.g., 1sBRvgrwEAfehd9M1EVu4Nfi_T3Rv5T228VnnmgL1iNE)
SHEETS_SERVICE_ACCOUNT_FILE=service_account.json  # Path to Service Account JSON key file
SHEETS_RANGE=シート1!A:G                      # Sheet range (A=Date, B=Scenario, C=Summary, D=Title, G=Status)

# Podcast API Input (fetch scenarios from external API - DEFAULT)
# When enabled, fetches video data from API instead of generating with AI
# Priority: Podcast API > Spreadsheet > AI Generation
PODCAST_API_ENABLED=true
PODCAST_API_URL=https://pg-admin.takezou.com/api/podcasts  # API endpoint for podcast data

# YouTube upload settings (optional - automatic upload to YouTube)
YOUTUBE_UPLOAD_ENABLED=false        # Enable automatic YouTube upload
YOUTUBE_PRIVACY_STATUS=private      # private, unlisted, or public
YOUTUBE_POST_COMMENTS=false         # Post auto-generated comments (true/false)
YOUTUBE_PLAYLIST_ID=                # Optional: Add videos to specific playlist

# Thumbnail A/B Testing (optional - generate multiple variations for CTR optimization)
GENERATE_THUMBNAIL_VARIANTS=false   # Generate 5 thumbnail variations for A/B testing
